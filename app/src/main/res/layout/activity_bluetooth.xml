<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_discoverable"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text="Discoverable"
        app:layout_constraintEnd_toStartOf="@+id/button_list"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bt_on" />

    <Button
        android:id="@+id/button_list"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text="Host"
        app:layout_constraintEnd_toEndOf="@+id/textView_status"
        app:layout_constraintTop_toBottomOf="@+id/button_bt_off"
        tools:text="List Nearby Devices" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="Connection Status"
        app:layout_constraintStart_toEndOf="@+id/textView_received_msg"
        app:layout_constraintTop_toBottomOf="@+id/button_list" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginEnd="12dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@+id/editText_msg"
        app:layout_constraintEnd_toEndOf="@+id/textView_status"
        app:layout_constraintTop_toTopOf="@+id/editText_msg"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_received_msg"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:text="Message"
        app:layout_constraintBottom_toTopOf="@+id/editText_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_discoverable"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText_msg"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintStart_toStartOf="@+id/button_discoverable" />

    <Button
        android:id="@+id/button_bt_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Turn Bluetooth On"
        app:layout_constraintEnd_toStartOf="@+id/button_bt_off"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_bt_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Turn Bluetooth Off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_bt_on"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="368dp"
        android:layout_height="297dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>